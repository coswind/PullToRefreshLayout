<?xml version="1.0" encoding="utf-8"?>

<io.github.coswind.pulltorefreshlayout.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        android:id="@+id/ptr_progress_up"
        style="@style/Widget.ProgressBar.PullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        android:id="@+id/ptr_progress_bottom"
        style="@style/Widget.ProgressBar.PullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</io.github.coswind.pulltorefreshlayout.PullToRefreshLayout>
